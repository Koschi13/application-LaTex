\newcommand{\kopfZeile}[1]{%
    \begin{minipage}[c][][b]{\textwidth} %
        \raggedleft {\raisebox{-1\baselineskip}{\kopfName}}
        \vspace{2pt}{\parbox{\textwidth}{\color{rulecolor}\rule{\textwidth}{1.5pt}}}%
        #1%
    \end{minipage}%
}

